    <%= render sublocation %>
    <p>
      <%= link_to "Show this sublocation", sublocation %>
    </p>
  <% end %>
</div>

<%= link_to "New sublocation", new_sublocation_path(luogo_n_id: @note.id) %>

<% end %>


